{
    "name": "describe-edgedb-package-artifact",
    "version": "0.0.1",
    "private": true,
    "description": "Action to describe EdgeDB package artifacts",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build --source-map --license licenses.txt",
        "all": "yarn run build && yarn run format && yarn run lint && yarn run package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/edgedb/action-describe-edgedb-package-artifact.git"
    },
    "author": "EdgeDB Inc.",
    "license": "Apache 2.0",
    "dependencies": {
        "@actions/core": "^1.10.0",
        "glob": "^8.0.3",
        "tar-stream": "^2.2.0"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@types/tar-stream": "^2.2.2",
        "@vercel/ncc": "^0.34.0",
        "eslint": "^8.27.0",
        "eslint-plugin-github": "^4.4.1",
        "eslint-plugin-jest": "^27.1.5",
        "jest": "^29.3.1",
        "jest-circus": "^29.3.1",
        "prettier": "2.7.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    }
}
