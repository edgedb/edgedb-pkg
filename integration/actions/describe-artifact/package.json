{
    "name": "describe-edgedb-package-artifact",
    "version": "0.0.1",
    "private": true,
    "description": "Action to describe EdgeDB package artifacts",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build --source-map --license licenses.txt",
        "all": "yarn run build && yarn run format && yarn run lint && yarn run package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/edgedb/action-describe-edgedb-package-artifact.git"
    },
    "author": "EdgeDB Inc.",
    "license": "Apache 2.0",
    "dependencies": {
        "@actions/core": "^1.2.6",
        "glob": "^7.2.0",
        "tar-stream": "^2.2.0"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.10",
        "@types/tar-stream": "^2.2.2",
        "@vercel/ncc": "^0.33.1",
        "eslint": "^8.7.0",
        "eslint-plugin-github": "^4.3.5",
        "eslint-plugin-jest": "^25.7.0",
        "jest": "^27.4.7",
        "jest-circus": "^27.4.6",
        "prettier": "2.5.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.1.0",
        "typescript": "^4.5.4"
    }
}
