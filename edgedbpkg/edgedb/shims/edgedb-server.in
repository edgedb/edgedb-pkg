#!/bin/sh

if [ -e "@@{userconfdir}/@@{identifier}/current" ]; then
    edbpath=$(cat "@@{userconfdir}/@@{identifier}/current")
elif [ -e "@@{localstatedir}/lib/edgedb/current" ]; then
    edbpath=$(cat "@@{localstatedir}/lib/edgedb/current")
fi

if [ -z "${edbpath}" ]; then
    echo "Could not determine EdgeDB installation path."
    echo "You may need to reinstall EdgeDB."
    exit 1
fi

exec "${edbpath}/$(basename $0)" "${@}"
