[Unit]
Description=@@{description}
Documentation=@@{documentation}
After=syslog.target
After=network.target

[Service]
Type=notify

User=edgedb
Group=edgedb

Environment=EDGEDATA=/var/lib/edgedb/@@{version}/data/

ExecStart=@@{bindir}/edgedb-server -D ${EDGEDATA}
ExecReload=/bin/kill -HUP ${MAINPID}
KillMode=mixed
KillSignal=SIGINT
TimeoutSec=0

[Install]
WantedBy=multi-user.target
